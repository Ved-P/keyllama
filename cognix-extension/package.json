{
  "name": "keyllama",
  "displayName": "CogNix",
  "description": "An AI-assisted learning tool that helps educators understand how students use AI in their coding workflow.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "keyllama",
          "title": "CogNix",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "keyllama": [
        {
          "type": "webview",
          "id": "keyllamaChatSidebar",
          "name": "AI Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "keyllama.showStats",
        "title": "Show Keystroke Statistics",
        "category": "CogNix"
      },
      {
        "command": "keyllama.resetSession",
        "title": "Reset Session",
        "category": "CogNix"
      },
      {
        "command": "keyllama.exportStats",
        "title": "Export Statistics",
        "category": "CogNix"
      },
      {
        "command": "keyllama.openChat",
        "title": "Open CogNix AI Chat"
      },
      {
        "command": "keyllama.saveSession",
        "title": "Save Session to Database",
        "category": "CogNix"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "mongodb": "^7.0.0"
  }
}
